<Window x:Name="Vidéothèque" x:Class="Videotheque.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videotheque"
        mc:Ignorable="d"
        Title="Vidéothèque" Height="auto" Width="auto" Cursor="Arrow" Visibility="Visible" WindowStyle="SingleBorderWindow">
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="BorderBrush" Value="#fecc00"/>
            <Setter Property="BorderThickness" Value="0 35 0 0"/>
            <Setter Property="Foreground" Value="DarkRed"/>
        </Style>
    </Window.Style>

    <Button x:Name="btnListeFilms" Content="Liste des films" HorizontalAlignment="Left" Margin="77,99,0,0" VerticalAlignment="Top" Width="75" Click="BtnListeFilms_Click"/>
</Window>
