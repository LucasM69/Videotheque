<Window x:Name="Vidéothèque" x:Class="Videotheque.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videotheque"
        mc:Ignorable="d"
        Title="Vidéothèque" Height="auto" Width="auto" Cursor="Arrow" Visibility="Visible" WindowStyle="ThreeDBorderWindow" >
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="WindowStyle" Value="None"/>
            <Setter Property="MinWidth" Value="0"/>
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="BorderBrush" Value="#fecc00"/>
            <Setter Property="BorderThickness" Value="0 35 0 0"/>
            <Setter Property="Foreground" Value="DarkRed"/>
        </Style>
    </Window.Style>
    <Grid>
        <Label x:Name="lblTotMedias" Content="Nombre de médias enregistrés : " HorizontalAlignment="Left" Height="40" Margin="20,20,0,0" VerticalAlignment="Top" Width="220" FontWeight="Bold" FontSize="14"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="-35,420,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblTotMediasCount" Content="" HorizontalAlignment="Left" Height="40" Margin="245,20,0,0" VerticalAlignment="Top" Width="55" FontWeight="Bold" FontSize="14"/>
    </Grid>
</Window>
