<Application x:Class="Videotheque.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Videotheque"
             StartupUri="views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="CouleurThemePrincipale">#fecc00</Color>
            <SolidColorBrush x:Key="CouleurBoutons" Color="#feb300"></SolidColorBrush>
            <SolidColorBrush x:Key="TextColor" Color="#262626"></SolidColorBrush>
            <Style TargetType="Button">
                <Setter Property="Background" Value="{StaticResource CouleurBoutons}"/>
                <Setter Property="Foreground" Value="{StaticResource TextColor}"></Setter>
            </Style>
            <Style TargetType="Window">
                <Setter Property="WindowStyle" Value="None"/>
                <Setter Property="MinWidth" Value="0"/>
                <Setter Property="MinHeight" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderBrush" Value="{StaticResource CouleurThemePrincipale}"/>
                <Setter Property="BorderThickness" Value="0 35 0 0"/>
                <Setter Property="Foreground" Value="DarkRed"/>
            </Style>
           </ResourceDictionary>
    </Application.Resources>
</Application>
